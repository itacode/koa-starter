{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env PLATFORM=development DEBUG=* node --inspect --watch --watch-path=server --import tsx server/index.ts | pino-pretty",
    "start": "cross-env NODE_ENV=production PLATFORM=production node --enable-source-maps ./dist/index.js",
    "build": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\" && tsc && node -e \"require('fs').cpSync('server/views', 'dist/views', {recursive: true})\"",
    "test": "jest --passWithNoTests",
    "lint": "npx eslint ./server/",
    "format": "prettier --write server/",
    "format:check": "prettier --check server/"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^15.3.0",
    "@ladjs/koa-views": "^9.0.0",
    "axios": "^1.13.4",
    "cross-env": "^10.1.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "helmet": "^8.1.0",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^9.0.0",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^5.0.0",
    "koa-static": "^5.0.0",
    "pino": "^10.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.5",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-json": "^2.0.24",
    "@types/koa-pino-logger": "^3.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
