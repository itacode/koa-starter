{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./server/",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 ./server/views/* ./dist/",
    "dev": "cross-env PLATFORM=development nodemon ./server/index.ts | pino-pretty",
    "dev:debug": "cross-env PLATFORM=development DEBUG=* nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "jest --passWithNoTests"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^13.1.0",
    "axios": "^1.7.7",
    "cross-env": "^7.0.3",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.1.0",
    "pino": "^9.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.13",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-json": "^2.0.23",
    "@types/koa-pino-logger": "^3.0.4",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.11.30",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
