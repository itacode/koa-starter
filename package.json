{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "Latest version of Koa.js powered lean template to start building servers",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./server/",
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 ./server/views/* ./dist/",
    "dev": "cross-env PLATFORM=development nodemon ./server/index.ts | pino-pretty",
    "dev:debug": "cross-env PLATFORM=development DEBUG=* nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "jest --passWithNoTests"
  },
  "author": "itacode",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^15.1.1",
    "@ladjs/koa-views": "^9.0.0",
    "axios": "^1.13.2",
    "cross-env": "^10.1.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^9.0.0",
    "koa-json": "^2.0.2",
    "koa-pino-logger": "^5.0.0",
    "koa-static": "^5.0.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.5",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-json": "^2.0.24",
    "@types/koa-pino-logger": "^3.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^25.0.3",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
